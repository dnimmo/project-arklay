{
  "name": "project-arklay",
  "version": "1.0.0",
  "description": "A short demo for an upcoming web-based text adventure game",
  "main": "./server/server.js",
  "scripts": {
    "build": "npm run check-standards && webpack ./client/app.js ./client/bundle.js --config ./config/webpack.config.js",
    "check-standards": "standard",
    "setup": "npm install -g pm2",
    "start": "pm2 start server/server.js",
    "test": "tape test/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnimmo/project-arklay.git"
  },
  "author": "David Nimmo <dnimmo@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dnimmo/project-arklay/issues"
  },
  "homepage": "http://project-arklay.com",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "body-parser": "^1.15.2",
    "cors": "^2.7.1",
    "pm2": "^1.1.3",
    "sinon": "^1.17.4",
    "supertest": "^1.2.0",
    "tape": "^4.6.0"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0"
  },
  "standard": {
    "ignore": [
      "/node_modules",
      "/client/src-old"
    ]
  }
}
